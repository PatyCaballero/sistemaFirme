<p id="notice"><%= notice %></p>

<h1>Stock</h1>

<table>
  <thead>
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock.each do |stocks| %>
      <tr>
        <td><%= stocks.producto %></td>
        <td><%= stocks.cantidad %></td>
        <td><%= stocks.descripcion %></td>
        <td><%= link_to 'Show', stocks %></td>
        <td><%= link_to 'Edit', edit_stocks_path(stocks) %></td>
        <td><%= link_to 'Destroy', stocks, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

