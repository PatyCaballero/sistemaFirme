<p id="notice"><%= notice %></p>

<h1>Guardias</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Numdocumento</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Fechanacimiento</th>
      <th>Nacionalidad</th>
      <th>Estadocivil</th>
      <th>Edad</th>
      <th>Gruposanguineo</th>
      <th>Estudios</th>
      <th>Nombrepadre</th>
      <th>Nombremadre</th>
      <th>Direccionalternativo</th>
      <th>Telurgencia</th>
      <th>Fechaingreso</th>
      <th>Sueldoinicial</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guardias.each do |guardia| %>
      <tr>
        <td><%= guardia.nombre %></td>
        <td><%= guardia.apellido %></td>
        <td><%= guardia.numDocumento %></td>
        <td><%= guardia.direccion %></td>
        <td><%= guardia.telefono %></td>
        <td><%= guardia.fechaNacimiento %></td>
        <td><%= guardia.nacionalidad %></td>
        <td><%= guardia.estadoCivil %></td>
        <td><%= guardia.edad %></td>
        <td><%= guardia.grupoSanguineo %></td>
        <td><%= guardia.estudios %></td>
        <td><%= guardia.nombrePadre %></td>
        <td><%= guardia.nombreMadre %></td>
        <td><%= guardia.direccionAlternativo %></td>
        <td><%= guardia.telUrgencia %></td>
        <td><%= guardia.fechaIngreso %></td>
        <td><%= guardia.sueldoInicial %></td>
        <td><%= guardia.observacion %></td>
        <td><%= link_to 'Show', guardia %></td>
        <td><%= link_to 'Edit', edit_guardia_path(guardia) %></td>
        <td><%= link_to 'Destroy', guardia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

