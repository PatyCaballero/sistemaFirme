<p id="notice"><%= notice %></p>
<div id="main-container" class="container">
      <div class="row">
      <div class="col-xs-12">
        <div class="col-xs-3">
            <h2>Asignar Puesto</h2><br><br><br>
        </div>
      
        <div class="col-xs-5">        
        </div>
        <!-- BUSCADOR -->
        <div class="col-xs-4">       
             <%= form_tag puestos_path, :method => 'get' do %>
                <p>
                  <%= text_field_tag :search, params[:search] %>
                  <%= submit_tag "Buscar", :name => nil %>
                </p>
            <% end %>
        </div>
<div class="col-xs-12">
            <div class="jumbotron">
              <div class="container">
              <div class="row">
                <div class="col-xs-1">
                </div>
                <div class="col-xs-3">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>Cliente</th>
                          <th>Guardia</th>
                          <th>Direccion</th>
                          <th>Turno</th>
                          <th>Hora Entrada</th>
                          <th>Hora Salida</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @puestos.each do |puesto| %>
                          <tr>
                          <td><%= puesto.cliente.nombre %></td> 
                          <td><%= puesto.regis_guardium.nombre %></td>  
                            <td><%= puesto.direccion %></td>
                            <td><%= puesto.turno %></td>
                            <td><%= puesto.hora_entrada %></td>
                            <td><%= puesto.hora_salida %></td>

                            <td><%= link_to puesto , class: 'btn btn-info' do %>
                                <i class="glyphicon glyphicon-eye-open"></i> Ver <% end %> 
                            </td>

                            <td><%= link_to edit_puesto_path(puesto), class: 'btn btn-info' do %>
                              <i class="glyphicon glyphicon-edit"></i> Editar <% end %>
                            </td>

                            <td><%= link_to puesto, method: :delete, data: { confirm: 'Estas seguro de Eliminar' } , class: 'btn btn-primary' do %>
                                    <i class="glyphicon glyphicon-trash"></i> Eliminar <% end %>
                            </td>
                          </tr>
                              <% end %>
                            </tbody>
                      </table>
                    </div>               

                  </div>
              </div>
            </div>
          </div>

          <div class="col-xs-3">

                    <%= link_to new_puesto_path, class: 'btn btn-success' do %>
                    <i class="glyphicon glyphicon-calendar"></i> Nueva Asignacion
                     <% end %>
          </div>

          <div class="col-xs-5">
          </div>
          
         <!-- <div class="col-xs-3">
              <nav aria-label="...">
                  <ul class="pager">
                      <li><a href="">Anterior</a></li>
                      <li><a href="">Siguiente</a></li>
                  </ul>
              </nav>
          </div>
          -->
          

</div> 

</div>
</div>
</div>