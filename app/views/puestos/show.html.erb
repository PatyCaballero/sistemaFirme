<p id="notice"><%= notice %></p>
<div id="main-container" class="container">
      <div class="row"><br><br>
      <div class="col-xs-12">
          <div class="col-xs-6">
          </div>

          <div class="col-xs-6">
				<%= link_to edit_puesto_path(@puesto), class: "btn btn-info" do %><i class="glyphicon glyphicon-pencil"></i> Editar <% end %> |
				<%= link_to puestos_path, class: "btn btn-default"  do %><i class="glyphicon glyphicon-arrow-left"></i> Atras <% end %>         		

          </div>
          <br><br><br><br>
          <div class="col-xs-10">
            <table class="table table-striped">

            		<td><p>
					  <strong>Cliente:</strong>
					  <%= @puesto.cliente.nombre %>
					</p></td>

					<td><p>
					  <strong>Guardia:</strong>
					  <%= @puesto.regis_guardium.nombre %>
					</p></td>

					<td><p>
					  <strong>Armamentos:</strong>
					  <%= @puesto.producto.nomProducto %>
					</p></td>
					

					<td><p>
					  <strong>Cantidad:</strong>
					  <%= @puesto.cantidad %>
					</p></td>

					<td><p>
					  <strong>Fecha Inicio:</strong>
					  <%= @puesto.fechaInicio %>
					</p></td>

					<td><p>
					  <strong>Hora entrada:</strong>
					  <%= @puesto.hora_entrada %>
					</p></td>

					<td><p>
					  <strong>Hora salida:</strong>
					  <%= @puesto.hora_salida %>
					</p></td>

					<td><p>
					  <strong>Fecha Fin:</strong>
					  <%= @puesto.fechaFin %>
					</p></td>
				</tr>
              </tbody>
            </table>          
          </div>
      </div>
    </div>
  </div>

