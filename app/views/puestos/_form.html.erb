<%= form_with(model: puesto, local: true) do |form| %>
  <% if puesto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(puesto.errors.count, "error") %> prohibited this puesto from being saved:</h2>

      <ul>
      <% puesto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="main-container" class="container">
      <div class="row">
      <div class="col-xs-12">
          <div class="col-xs-3">
          </div>
          <div class="jumbotron">
            <div class="container">
          <div class="col-xs-4">
              <form class="form-inline">
                    <div class="field">
                        <%= form.label "Cliente" %>
                        <%= form.collection_select(:cliente_id, Cliente.all, :id, :nombre) %>
                      </div><br><br>

                    
                      <div class="field">
                        <%= form.label "Guardias Disponibles" %>
                        <%= form.collection_select(:regis_guardium_id, RegisGuardium.where(estado: "false"), :id, :nombre) %>

                      </div><br><br>

                      <div class="field">
                        <%= form.label "Equipamientos" %>
                        <%= form.collection_select(:producto_id, Producto.all, :id, :nomProducto) %>
                      </div><br><br>

                      <div class="field">
                        
                        <%= form.number_field :cantidad, id: :puesto_cantidad, class: "form-control", placeholder:"Cantidad" %><br><br>
                      </div>

                      
          </div>
          <div class="col-xs-3">
          </div>
          <div class="col-xs-4">
                      
                      <div class="field">
                        <%= form.label "Fecha Inicio" %>
                        <%= form.date_field :fechaInicio, id: :puesto_fechaInicio, class: "form-control", placeholder:"Fecha Inicio" %><br><br>
                      </div>

                      <div class="field">
                        <%= form.label "Hora Entrada" %>
                        <%= form.time_select :hora_entrada, id: :puesto_hora_entrada, class: "form-control" %><br><br>
                      </div>

                      <div class="field">
                          <%= form.label "Hora Salida " %>
                         <%= form.time_select :hora_salida, id: :puesto_hora_salida, class: "form-control" %><br><br>
                      </div>

                      <div class="field">
                        <%= form.label "Fecha Fin" %>
                        <%= form.date_field :fechaFin, id: :puesto_fechaFin, class: "form-control", placeholder:"Fecha Fin" %><br><br>
                      </div>

          </div>
          <div class="col-xs-2">
              <div class="field">
                          <%= form.label "Dejar Puesto" %>
                          <%= form.check_box :estado, id: :puesto_estado %>
                    </div>
          </div>
          <div class="col-xs-3">
          </div>
      </div>
    </div>

        <div class="col-xs-3">
          <div class="actions">
              <%= form.submit "Guardar", :class=>"button-guardar" %>
          </div>
          <% end %>
        </div>
