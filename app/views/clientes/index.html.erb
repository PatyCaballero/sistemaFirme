<p id="notice"><%= notice %></p>
<div id="main-container" class="container">
      <div class="row">
      <div class="col-xs-12">
        <div class="col-xs-3">
            <h2>Registrar Cliente</h2><br><br><br>
        </div>
      
        <div class="col-xs-5">        
        </div>
        <div class="col-xs-4">
            <%= form_tag clientes_path, :method => 'get' do %>
                <p>
                  <%= text_field_tag :search, params[:search] %>
                  <%= submit_tag "Buscar", :name => nil %>
                </p>
            <% end %>
        </div>

      <div class="col-xs-12">
            <div class="jumbotron">
              <div class="container">
              <div class="row">
                <div class="col-xs-1">
                </div>
                <div class="col-xs-3">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>Cliente</th>
                          <th>NÂº Ruc</th>
                          <th>Telefono</th>
                          <th>Direccion</th>
                          <th>Estado</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @clientes.each do |cliente| %>
                          <tr>
                            <td><%= cliente.nombre %></td>
                            <td><%= cliente.num_ruc %></td>
                            <td><%= cliente.telefono %></td>
                            <td><%= cliente.direccion %></td>
                            <td><%= cliente.estado %></td>

                            
                            <td><%= link_to cliente, class: 'btn btn-info' do %>
                                  <i class="glyphicon glyphicon-eye-open"></i> Ver <% end %> 
                            </td>

                            <td><%= link_to edit_cliente_path(cliente), class: 'btn btn-info' do %>
                                <i class="glyphicon glyphicon-edit"></i> Editar <% end %>
                            </td>

                            <td><%= link_to cliente, method: :delete, data: { confirm: 'Estas seguro de Eliminar?' }, class: 'btn btn-primary' do %>
                                      <i class="glyphicon glyphicon-trash"></i> Eliminar <% end %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                </div>

                  </div>
              </div>
            </div>
          </div>

          <div class="col-xs-3">
              <%= link_to new_cliente_path, class: 'btn btn-success' do %>
            <i class="glyphicon glyphicon-user"></i> Nuevo Registro
             <% end %>
          </div>

          <div class="col-xs-5">
          </div>       
</div> 

</div>
</div>
</div>