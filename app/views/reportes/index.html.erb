                            <th>Estado</th>
                            <th colspan="3"></th>
                          </tr>
                      </thead>

                      <tbody>
                        <% @reportes.each do |reporte| %>
                        <tr>
                         
                          <td><%= reporte.puesto.regis_guardium.nombre %></td>
                          <td><%= reporte.puesto.cliente.nombre %></td>
                          <td><%= reporte.horaEntrada %></td>
                          <td><%= reporte.horaSalida %></td>
                          <!--<td><%= reporte.estado %></td>--> 
                          <td><%= reporte.novedad %></td>

                          <td><%= link_to reporte, class: 'btn btn-info' do %>
                                <i class="glyphicon glyphicon-eye-open"></i> Ver <% end %> 
                          </td>
                          <td><%= link_to edit_reporte_path(reporte), class: 'btn btn-info' do %>
                              <i class="glyphicon glyphicon-edit"></i> Editar <% end %>
                          </td>
                          <!--<td><%= link_to reporte, method: :delete, data: { confirm: 'Estas seguro de Eliminar' }, class: 'btn btn-primary' do %>
                            <i class="glyphicon glyphicon-trash"></i> Eliminar <% end %>
                          </td>-->
                        </tr>
