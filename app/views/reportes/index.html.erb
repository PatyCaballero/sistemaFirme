        <div class="col-xs-3">
            <h2>Reportes</h2><br><br><br>
        </div>
      
        <div class="col-xs-5">        
        </div>

        <div class="col-xs-3">
            <%= link_to new_reporte_path , class: 'btn btn-success' do %>
            <i class="glyphicon glyphicon-calendar"></i> Nuevo Reporte
           <% end %>
          </div>
<div class="col-xs-12">

                <div class="col-xs-3">

                </div>
                <div class="col-xs-3">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                            <th> Guardia </th>
                            <th> Puesto </th>
                            <th>Horaentrada</th>
                            <th>Horasalida</th>
